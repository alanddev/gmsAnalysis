<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#424242">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/earfcn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="EARFCN"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextColor"/>

            <TextView
                android:id="@+id/earfcn_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="1503"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/plmn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="PLML"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorTextColor"/>
            <TextView
                android:id="@+id/plmn_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="452/01"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/pci_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="PCI"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextColor"/>

            <TextView
                android:id="@+id/pci_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="1503"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/band_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Band"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorTextColor"/>
            <TextView
                android:id="@+id/band_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="B03"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/rsrp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="RSRP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rsrp_value"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:progress="40"
            android:max="100" />

        <TextView
            android:id="@+id/rsrp_progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@+id/rsrp_value"
            android:layout_alignRight="@+id/rsrp_value"
            android:layout_alignTop="@+id/rsrp_value"
            android:layout_alignBottom="@+id/rsrp_value"
            android:text="15"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/tac_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:text="TAC"
            android:textSize="14sp"
            android:textColor="@color/colorTextColor"/>
        <TextView
            android:id="@+id/tac_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="16010"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/sinr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="SINR"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextColor"/>

            <TextView
                android:id="@+id/sinr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="1503"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/ecellid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="ECellID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextColor"/>
            <TextView
                android:id="@+id/ecellid_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="16010"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </TableRow>
</TableLayout>
