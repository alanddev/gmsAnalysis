<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="10dp"
android:paddingBottom="10dp">

<ImageView
    android:id="@+id/icon"
    android:src="@mipmap/add1"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:scaleType="fitXY"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="2dp"
    />

    <TextView
        android:id="@+id/cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="cmd"
        android:textColor="@android:color/black"
        android:textStyle="bold"

        android:layout_alignLeft="@+id/server"
        android:layout_alignStart="@+id/server" />


    <TextView android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="12dp"
        android:text="Server"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/stream"
        android:textStyle="bold"/>

    <TextView android:id="@+id/elapseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:text="time:"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_toRightOf="@+id/cmd"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <TextView android:id="@+id/stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:text="Stream:"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_toRightOf="@+id/cmd"
        android:layout_below="@+id/elapseTime"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <TextView android:id="@+id/numberRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="12dp"
        android:text="Number Run"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_toRightOf="@+id/elapseTime"
        android:textStyle="bold"/>

    <TextView android:id="@+id/timeNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="12dp"
        android:text="Time to next"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_toRightOf="@+id/elapseTime"
        android:layout_below="@+id/numberRun"
        android:textStyle="bold"/>

    <TextView android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="12dp"
        android:text="User"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_toRightOf="@+id/numberRun"
        android:textStyle="bold"/>

    <TextView android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="12dp"
        android:text="Pass"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_toRightOf="@+id/timeNext"
        android:layout_below="@+id/user"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Status"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
    />
</RelativeLayout>