    <!--android:layout_toRightOf="@+id/icon"-->
    <TextView
        android:id="@+id/cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:text="cmd"
        android:width="@dimen/info_command_size"
        android:maxLength="8"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:maxLength="8"
        android:width="@dimen/info_command_size"
        android:text="Server"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/cmd"
        android:textStyle="bold"/>

    <TextView android:id="@+id/elapseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:maxLength="8"
        android:width="@dimen/info_command_size"
        android:text="time:"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_toRightOf="@+id/server"
        android:textStyle="bold"/>

    <TextView android:id="@+id/stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:width="@dimen/info_command_size"
        android:maxLength="8"
        android:text="Stream:"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_toRightOf="@+id/elapseTime"
        android:textStyle="bold"/>



    <TextView android:id="@+id/numberRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:width="@dimen/info_command_size"
        android:maxLength="8"
        android:text="Number Run"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/stream"
         />

    <TextView android:id="@+id/timeNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:width="@dimen/info_command_size"
        android:maxLength="8"
        android:text="Time to next"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_toRightOf="@+id/numberRun"
        android:textStyle="bold"/>

    <TextView android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:maxLength="8"
        android:width="@dimen/info_command_size"
        android:text="User"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/timeNext" />


    <TextView android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:width="@dimen/info_command_size"
        android:maxLength="8"
        android:text="Pass"
        android:textColor="@android:color/holo_green_dark"
        android:layout_toRightOf="@+id/user"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_command_size"
        android:width="@dimen/info_command_size"
        android:maxLength="8"
        android:text="Status"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/pass"
    />

</RelativeLayout>